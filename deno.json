{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"],
    "strict": true
  },
  "lint": {
    "files": {
      "include": [
        "app/scripts/",
        "lib/scripts/"
      ],
      "exclude": []
    }
  },
  "fmt": {
    "files": {
      "include": [
        "app/scripts/",
        "lib/scripts/"
      ],
      "exclude": []
    },
    "options": {
      "useTabs": false,
      "lineWidth": 71,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "always"
    }
  }
}
